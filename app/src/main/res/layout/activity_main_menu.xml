<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.activities.MainMenu">

    <Button
        android:text="MapTest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonMapTest"
        android:layout_marginBottom="46dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/buttonSettings" />

    <Button
        android:text="Play!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="102dp"
        android:id="@+id/buttonPlay" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textAlignment="center"
        android:textSize="24sp" />

    <Button
        android:text="Settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonSettings"
        android:layout_marginTop="31dp"
        android:layout_below="@+id/buttonPlay"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="MQTT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonMQTTTest"
        android:layout_marginStart="65dp"
        android:layout_marginBottom="18dp"
        android:layout_above="@+id/buttonMapTest"
        android:layout_alignStart="@+id/buttonPlay" />

    <Button
        android:text="Firebase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonFirebaseTest"
        android:layout_alignBaseline="@+id/buttonMQTTTest"
        android:layout_alignBottom="@+id/buttonMQTTTest"
        android:layout_toStartOf="@+id/buttonMapTest" />
</RelativeLayout>
