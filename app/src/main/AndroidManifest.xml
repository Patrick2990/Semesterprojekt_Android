<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.patrickkaalund.semesterprojekt_android">

    <uses-permission android:name="android.permission.INTERNET" />

    <!--  MQTT -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        >

        <service
            android:name="com.services.MusicService"
            android:enabled="true"
            android:exported="true" />

        <activity android:name="com.activities.Main"
                  android:configChanges="keyboardHidden|orientation|screenSize"
                  android:theme="@style/AppTheme.NoActionBar"
                  >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.teststuff.MapTestActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_map_test"
            android:theme="@style/FullscreenTheme" />
        <activity
            android:name="com.activities.InGame"
            android:label="@string/title_activity_in_game"
            android:theme="@style/AppTheme.NoActionBar"
            android:configChanges="keyboardHidden|orientation|screenSize"
        />
        <activity
            android:name="com.activities.OptionsActivity"
            android:label="Settings"
            android:theme="@style/AppTheme.NoActionBar"

            android:configChanges="keyboardHidden|orientation|screenSize"
        />

    </application>

</manifest>

